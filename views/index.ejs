<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <title>To do list</title>
  </head>
  <body>
    <header>
      <% if(task == null){ %>

      <h1 class="classTitle">TO DO LIST</h1>
      <div class="container">
        <form class="taskForm" action="/create" method="post">
          <input
            type="text"
            class="inputTask"
            name="task"
            id="task"
            placeholder="Insira"
          />
          <button id="addButton" class="buttonSub" type="submit">
            Adicionar
          </button>
        </form>
      </div>

      <div>
        <% } else{ %>
        <h1 class="classTitle">EDITAR TAREFA</h1>
        <form
          class="taskForm"
          action="/updateOne/<%= task._id %>"
          method="post"
        >
          <input
            type="text"
            name="task"
            class="subTask"
            value="<%= task.task %>"
          />
          <button id="addButton" class="buttonRel" type="submit">
            Atualizar
          </button>
        </form>
        <% } %>
      </div>
    </header>

    <section id="tasks" class="tasks">
      <ul>
        <% tasksList.forEach((task) => { %>
        <li>
          <div>
            <a href="/"><%= task.task %> </a>
            <span>
              Criado em: <%= task.date.toLocaleDateString("pt-br") %></span
            >
          </div>
          <div>
            <a href="/getById/<%= task._id %>/update" id="edit"
              ><i class="bi bi-pencil-square"></i
            ></a>
            <a href="/getById/<%= task._id %>/delete" id="delete"
              ><i class="bi bi-trash3"></i
            ></a>
          </div>
        </li>
        <% }) %>
      </ul>
    </section>

    <% if(taskDelete != null){%>
    <section id="modal">
      <div id="card">
        <a href="/home">X</a>
        <h2>Confirmação</h2>
        <hr />
        <p>Deseja Apagar a tarefa: <%= taskDelete.task %>?</p>
        <a href="/home">Não</a>
        <a href="/deleteOne/<%=taskDelete._id%>">Sim</a>
      </div>
    </section>
    <% } %>

    <script src="script.js"></script>
  </body>
</html>
